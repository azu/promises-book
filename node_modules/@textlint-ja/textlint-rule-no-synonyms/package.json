{
  "name": "@textlint-ja/textlint-rule-no-synonyms",
  "version": "1.0.1",
  "description": "同義語を表記ゆれをチェックするtextlintルール",
  "keywords": [
    "textlintrule"
  ],
  "homepage": "https://github.com/textlint-ja/textlint-rule-no-synonyms/tree/master/",
  "bugs": {
    "url": "https://github.com/textlint-ja/textlint-rule-no-synonyms/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/textlint-ja/textlint-rule-no-synonyms.git"
  },
  "license": "MIT",
  "author": "azu",
  "files": [
    "bin/",
    "lib/",
    "src/"
  ],
  "main": "lib/textlint-rule-no-synonyms.js",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "textlint-scripts build",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepublish": "npm run --if-present build",
    "test": "textlint-scripts test",
    "watch": "textlint-scripts build --watch"
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4
  },
  "dependencies": {
    "textlint-rule-helper": "^2.1.1",
    "tiny-segmenter": "^0.2.0"
  },
  "devDependencies": {
    "@textlint/types": "^1.2.3",
    "@types/node": "^12.12.12",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "prettier": "^1.19.1",
    "sudachi-synonyms-dictionary": "^4.0.1",
    "textlint-scripts": "^3.0.0",
    "textlint-tester": "^5.1.11",
    "ts-node": "^8.5.2",
    "typescript": "^3.7.2"
  },
  "peerDependencies": {
    "sudachi-synonyms-dictionary": ">=4.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
