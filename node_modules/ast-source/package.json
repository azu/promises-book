{
  "name": "ast-source",
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/ast-source.git"
  },
  "author": "azu",
  "email": "azuciao@gmail.com",
  "homepage": "https://github.com/azu/ast-source",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/azu/ast-source/issues"
  },
  "version": "3.0.0",
  "description": "AST helper to transform source code.",
  "main": "lib/ASTSource.js",
  "files": [
    "lib",
    "src"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "babel src --out-dir lib --source-maps",
    "watch": "babel src --out-dir lib --watch --source-maps",
    "prepublish": "npm run --if-present build",
    "test": "mocha && (cd example && npm test)",
    "prettier": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\""
  },
  "keywords": [
    "ast",
    "generator",
    "sourcemap",
    "source-map"
  ],
  "dependencies": {
    "@babel/core": "^7.0.0",
    "@babel/generator": "^7.0.0",
    "@babel/traverse": "^7.0.0",
    "acorn-to-esprima": "^2.0.8",
    "babylon": "^6.6.5",
    "convert-source-map": "^1.1.1",
    "debug": "^4.1.0",
    "escodegen": "^1.6.1",
    "esprima": "^4.0.1",
    "espurify": "^1.3.0",
    "object-assign": "^4.0.1",
    "path-is-absolute": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "ast-equal": "^1.0.2",
    "comment-to-assert": "^1.0.1",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "mocha": "^5.2.0",
    "prettier": "^1.8.1"
  },
  "prettier": {
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 4
  },
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write",
      "git add"
    ]
  }
}
